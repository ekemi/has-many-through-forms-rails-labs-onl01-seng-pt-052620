<%= form_for post do |f| %>
<%=f.label "Title"%>
<%f.text_field :title%><br>
<%=f.label "Content"%><br><br>
<%=f.label "Category"%>
<%=f.collection_check_boxes :category_ids, Category.all, :id, :name%>
<%=f.field_for :categories, post.categories.build do |categories_fields|%>
<%=categories_fields.text_field :name%>
<%end%>
<br><%f.submit%>
<%end%>
